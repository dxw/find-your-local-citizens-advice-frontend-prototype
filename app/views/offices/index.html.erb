<div class="row">
  <h1>Search for your local Citizens Advice</h1>
</div>

<div class="row">
  <div class="col-3">
    <%= form_tag(offices_path, method: :get) do %>
      <div class="mb-3">
        <%= text_field_tag(:search, params[:search], class: "form-control") %>
      </div>
      <div class="mb-3">
        <%= submit_tag("Search", class: "btn btn-primary") %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <% if @local_authority.present? %>
    <p>The local authority for <%= params[:search].upcase %> is <%= @local_authority.name %>.</p>
  <% end %>
</div>


<% if @offices.present? %>
  <ul class="list-group">
    <% @offices.each do |office| %>
      <li class="list-group-item">
        <%= link_to(office.name, office_path(office.id)) %>
        <% if office.distance_in_meters.present? %>
          <%= (office.distance_in_meters / 1609.34).round(2) %> miles
        <% end %>
      </li>
    <% end %>
  </ul>
<% elsif params[:search].present? %>
  <p>No results, please try using a UK postcode.</p>
<% end %>
