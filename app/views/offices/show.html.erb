<%= link_to "Back", :back %>

<h1><%= @office.name %></h1>

<h2>Contact us</h2>

<div class="row">
  <div class="col-8">
    <ul class="list-group">
      <li class="list-group-item"><%= @office.billingstreet %></li>
      <li class="list-group-item"><%= @office.billingstate %></li>
      <li class="list-group-item"><%= @office.billingcity %></li>
      <li class="list-group-item"><%= @office.billingpostalcode %></li>
      <li class="list-group-item"><%= @office.website %></li>
      <li class="list-group-item"><%= @office.phone %></li>
    </ul>
  </div>
  <div class="col-4">
    <div style="width: 250px;position: relative;">
      <iframe
        width="250"
        height="200"
        src="https://maps.google.com/maps?width=200&amp;height=100&amp;hl=en&amp;q=<%= @office.billinglatitude %>,<%= @office.billinglongitude %>&amp;output=embed"
        frameborder="0">
      </iframe>
    </div>
  </div>
</div>
<h2>About our service</h2>
<p><%= @office.about_our_advice_service__c || "We don't have the data for this yet" %></p>

<h2>Advice session times</h2>
<ul class="list-group">
  <% @office.office_opening_times.group_by(&:weekday).each_pair do |weekday, opening_times| %>
    <li class="list-group-item">
      <%= weekday %>
      <% opening_times.each do |opening_time| %>
        <span class="badge rounded-pill bg-info text-dark">
          <%= opening_time.start_time %> - <%= opening_time.end_time %>
        </span>
      <% end %>
    </li>
  <% end %>
</ul>

<h2>Telephone advice times</h2>
<ul class="list-group">
  <% @office.telephone_advice_times.group_by(&:weekday).each_pair do |weekday, opening_times| %>
    <li class="list-group-item">
      <%= weekday %>
      <% opening_times.each do |opening_time| %>
        <span class="badge rounded-pill bg-info text-dark">
          <%= opening_time.start_time %> - <%= opening_time.end_time %>
        </span>
      <% end %>
    </li>
  <% end %>
</ul>

<h2>Access details </h2>
<ul>
  <% @office.access_details__c.split(";").each do |access_detail| %>
    <li><%= access_detail %></li>
  <% end %>
</ul>
